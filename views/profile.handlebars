<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card ">
        <div class="d-flex">
          <div class="d-flex align-items-center mx-5">
            <img class="img-responsive center-block" src="{{user.image}}"
              style="width: 250px; height: 250px; border-radius:50%;">
          </div>
          <div class="ml-5 m-3">
            <h3>{{user.name}}</h3>
            <div>{{user.email}}</div>
            <div class="m-3"><strong>{{user.CommentRestaurantCount}}</strong> &ensp;&ensp;已評論餐廳</div>
            <div class="m-3"><strong>{{user.FavoritedRestaurantCount}}</strong> &ensp;&ensp;收藏的餐廳</div>
            <div class="m-3"><strong>{{user.FollowingCount}}</strong> &ensp;&ensp;Followings(追蹤者)</div>
            <div class="m-3"><strong>{{user.FollowerCount}}</strong> &ensp;&ensp;Followers (追蹤者)</div>
            {{#if edit}}
            <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
            {{else}}
            {{#if isFollowed }}
            <form action="/following/{{user.id}}?_method=DELETE" method="POST" style="display: contents;"><button
                type="submit" class="btn btn-danger">取消追蹤</button></form>
            {{else}}
            <form action="/following/{{user.id}}" method="POST" style="display: contents;"><button type="submit"
                class="btn btn-primary">追蹤</button></form>
            {{/if}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 mt-3">
      <div class="card">
        <div class="card-header">
          <strong>{{user.FollowingCount}}</strong> Followings(追蹤者)
        </div>
        <div class="card-body">
          {{#each followings}}
          <a href="/users/{{this.id}}" style="display: inline-block;">
            <img class="img" src="{{this.image}}" style="width: 100px; height:100px">
          </a>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="col-sm-8 mt-3">
      <div class="card">
        <div class="card-header">
          <strong>{{user.CommentRestaurantCount}}</strong> 已評論餐廳
        </div>
        <div class="card-body">
          {{#each commentRestaurants}}
          <a href="/restaurants/{{this.id}}" style="display: inline-block;">
            <img class="img" src="{{this.image}}" style="width: 100px; height:100px">
          </a>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="col-sm-4 mt-3">
      <div class="card">
        <div class="card-header">
          <strong>{{user.FollowerCount}}</strong> Followers (追蹤者)
        </div>
        <div class="card-body">
          {{#each followers}}
          <a href="/users/{{this.id}}" style="display: inline-block;">
            <img class="img" src="{{this.image}}" style="width: 100px; height:100px">
          </a>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="col-sm-8 mt-3">
      <div class="card">
        <div class="card-header">
          <strong>{{user.FavoritedRestaurantCount}}</strong> 收藏的餐廳
        </div>
        <div class="card-body">
          {{#each favoritedRestaurants}}
          <a href="/restaurants/{{this.id}}" style="display: inline-block;">
            <img class="img" src="{{this.image}}" style="width: 100px; height:100px">
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>